<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.doctor.ui.doctor.DoctorFragment"
        android:label="@string/title_doctor"
        tools:layout="@layout/fragment_doctor" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.doctor.ui.patient.PatientFragment"
        android:label="@string/title_patient"
        tools:layout="@layout/fragment_patient" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.doctor.ui.patient.PatientAddFragment"
        android:label="@string/title_patient_add"
        tools:layout="@layout/fragment_add_patient" />
</navigation>